# Environment configuration for Captive Portal
# Copy this to .env and fill in your values

# Database
DB_PASSWORD=your_secure_database_password

# Application
SECRET_KEY=your_very_secret_key_min_32_chars

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# RADIUS Configuration
RADIUS_SECRET=testing123
RADIUS_SERVER=192.168.99.4
RADIUS_NAS_IP=192.168.99.1

# Portal Configuration
PORTAL_URL=http://portal.local

# Security Settings
EMAIL_VERIFICATION_REQUIRED=false
VERIFICATION_TIMEOUT_MINUTES=15

# VLAN Mappings (status to VLAN ID)
VLAN_FRIARS=10
VLAN_STAFF=20
VLAN_STUDENTS=30
VLAN_GUESTS=40
VLAN_CONTRACTORS=50
VLAN_VOLUNTEERS=60
VLAN_IOT=70
VLAN_UNREGISTERED=99
VLAN_RESTRICTED=90
